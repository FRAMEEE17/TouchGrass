@{
    ViewData["Title"] = "Login";
}
<html>
<header>
    <link rel="stylesheet" href="~/css/Login.css">
    <link href='https://fonts.googleapis.com/css?family=Itim' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</header>
<body>
    <div class="viewports">
        <img class="bgimg" src="https://thechuunicorner.files.wordpress.com/2019/09/inksybw.png">
        <div class="login-box">
            <p class="login-text">Login</p>
            <form asp-controller="Home" asp-action="Index" class="login-form">
                <input type="text" class="username-box" placeholder="Username">
                <input type="password" class="password-box" placeholder="Password">
                <button type="submit" class="submit-button">Submit</button>
            </form>
            <p class="signup">Not a member?<a asp-controller="Register" asp-action="Index" class="signup">Signup Now</a></p>
        </div>
    </div>
</body>
</html>